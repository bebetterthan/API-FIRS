# Application
APP_ENV=production
APP_DEBUG=false
APP_URL=https://eivc-k6z6d.ondigitalocean.app
TIMEZONE=Africa/Lagos

# API Configuration
API_VERSION=v1
API_KEY=your_api_key_here
API_SECRET=your_api_secret_here

# Security
CRYPTO_KEYS_FILE=./storage/crypto_keys.txt
MAX_UPLOAD_SIZE=102400
ALLOWED_IPS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_IP=60

# SFTP Configuration
SFTP_ENABLED=false
SFTP_HOST=your_sftp_host
SFTP_PORT=22
SFTP_USERNAME=your_username
SFTP_PASSWORD=your_password
SFTP_ROOT_PATH=/firs-invoices

# FIRS API Configuration
FIRS_API_ENABLED=false
FIRS_API_URL=https://api.firs.gov.ng
FIRS_API_KEY=your_firs_api_key
FIRS_API_TIMEOUT=30

# File Paths
STORAGE_PATH=./storage
OUTPUT_PATH=/www/wwwroot/sftp/user_data
LOGS_PATH=./logs

# Logging Configuration
LOG_LEVEL=info

# Database Configuration for Logging
# Set to 'true' to enable database logging
DB_LOGGING_ENABLED=true

# Database Driver: 'pdo' or 'sqlsrv'
# Use 'pdo' for PDO_SQLSRV extension (recommended)
# Use 'sqlsrv' for Microsoft SQL Server extension
DB_DRIVER=pdo

# Database Connection
DB_HOST=34.65.240.209
DB_PORT=1433
DB_DATABASE=firsstaging
DB_USERNAME=sa
DB_PASSWORD=YourPassword123!

# Database Tables
DB_TABLE_SUCCESS=firs_success_logs
DB_TABLE_ERROR=firs_error_logs
